# Axis-Guardian Environment Configuration
# Copy this file to .env and update values as needed

###############################################
# Database Configuration
###############################################
POSTGRES_DB=surveillance
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev
POSTGRES_PORT=5433

###############################################
# MQTT Broker Configuration
###############################################
MQTT_PORT=1883
MQTT_WS_PORT=9001

###############################################
# MinIO Object Storage Configuration
###############################################
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_CONSOLE_PORT=9090

###############################################
# MediaMTX Streaming Server Configuration
###############################################
MEDIAMTX_HOST=mediamtx
MEDIAMTX_RTSP_PORT=8554
MEDIAMTX_HLS_PORT=8888
MEDIAMTX_WEBRTC_PORT=8889
MEDIAMTX_API_PORT=9997
MEDIAMTX_METRICS_PORT=9998

###############################################
# WebRTC Detection Service Configuration
###############################################
WEBRTC_DETECTION_HOST=0.0.0.0
WEBRTC_DETECTION_PORT=8080

# WebRTC ICE Servers
STUN_SERVER=stun:stun.l.google.com:19302
# TURN_SERVER=turn:your-turn-server.com:3478
# TURN_USERNAME=username
# TURN_PASSWORD=password

# YOLOv8 Detection Settings
MODEL_PATH=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
FRAME_SKIP=1
MAX_FPS=60
DETECTION_RESOLUTION=640
AUTO_SCALE_DETECTION=true
# Pre-rendered videos already have detections drawn, set to false for better performance
DRAW_ON_FRAME=false

# Logging
LOG_LEVEL=INFO

###############################################
# Video Pre-rendering Configuration
###############################################
# Resolution for pre-rendered videos (480p, 720p, 1080p)
# 720p recommended for best balance of quality and performance
# Lower resolution = higher FPS and less bandwidth
RENDER_RESOLUTION=720p

###############################################
# VAPIX API Simulator Configuration
###############################################
VAPIX_API_PORT=8090

###############################################
# Frontend Configuration
###############################################
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_RTSP_PROXY_URL=http://localhost:8080
VITE_VAPIX_API_URL=http://localhost:8090
