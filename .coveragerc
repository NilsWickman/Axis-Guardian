[run]
source =
    simulation/object-detection/src
    simulation/webrtc-detection/src

omit =
    */venv/*
    */tests/*
    */__pycache__/*
    */site-packages/*

[report]
# Reporting precision
precision = 2

# Show missing lines
show_missing = True

# Sort by coverage percentage
sort = Cover

# Fail if coverage is below this percentage
fail_under = 60

exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:

    # Don't complain about abstract methods
    @abstractmethod

    # Type checking blocks
    if TYPE_CHECKING:

[html]
directory = htmlcov
title = Axis Guardian Test Coverage Report
